pipeline {
  // run everything inside this docker image (dind) and mount workspace
  agent {
    docker {
      image 'docker:27.0.1-dind'
      args """--user root \
             -v /var/run/docker.sock:/var/run/docker.sock \
             -v ${WORKSPACE}:/workspace \
             -w /workspace"""
    }
  }

  stages {

    stage('Setup Tools') {
      steps {
        sh '''
          # apk package manager (busybox alpine)
          apk update || true
          apk add --no-cache openjdk17 maven git bash curl
        '''
      }
    }

    stage('Checkout') {
      steps {
        // checkout will create .git in the mounted workspace inside the container
        checkout scm
        sh 'git status --porcelain || true'
      }
    }

    stage('Build and Test') {
      steps {
        sh '''
          cd java-maven-sonar-argocd-helm-k8s/spring-boot-app
          mvn -B clean package
        '''
      }
    }

    stage('Static Code Analysis') {
      environment {
        SONAR_URL = "http://13.60.180.119:9000"
      }
      steps {
        withCredentials([string(credentialsId: 'sonarqube', variable: 'SONAR_AUTH_TOKEN')]) {
          sh '''
            cd java-maven-sonar-argocd-helm-k8s/spring-boot-app
            mvn sonar:sonar -Dsonar.login=$SONAR_AUTH_TOKEN -Dsonar.host.url=${SONAR_URL}
          '''
        }
      }
    }

    stage('Build and Push Docker Image') {
      environment {
        DOCKER_IMAGE = "avinashkumar8/ultimate-cicd-springboot:${BUILD_NUMBER}"
      }
      steps {
        sh '''
          cd java-maven-sonar-argocd-helm-k8s/spring-boot-app
          docker build -t ${DOCKER_IMAGE} .
        '''
        script {
          docker.withRegistry('https://index.docker.io/v1/', 'docker-cred') {
            docker.image(env.DOCKER_IMAGE).push()
          }
        }
      }
    }

    stage('Update Deployment File') {
      environment {
        GIT_REPO_NAME = "Jenkins-Zero-To-Hero"
        GIT_USER_NAME = "avi-nash-kr"
      }
      steps {
        // we are already inside container and workspace is mounted -> .git exists
        withCredentials([string(credentialsId: 'github', variable: 'GITHUB_TOKEN')]) {
          sh '''
            echo "Inside container, workspace is: $(pwd)"
            git rev-parse --is-inside-work-tree

            git config user.email "avi123nash123@gmail.com"
            git config user.name "Avinash Kumar"

            sed -i "s/replaceImageTag/${BUILD_NUMBER}/g" java-maven-sonar-argocd-helm-k8s/spring-boot-app-manifests/deployment.yml

            git add java-maven-sonar-argocd-helm-k8s/spring-boot-app-manifests/deployment.yml
            git commit -m "Update deployment image to version ${BUILD_NUMBER}" || echo "No changes to commit"

            git push https://${GITHUB_TOKEN}@github.com/${GIT_USER_NAME}/${GIT_REPO_NAME}.git HEAD:main
          '''
        }
      }
    }
  }
}
